# ----- Shared container + database settings -----
POSTGRES_HOST=db
POSTGRES_DB=notsolong
POSTGRES_PORT=5432
POSTGRES_USER=notsolong
POSTGRES_PASSWORD=notsolong

# External port exposed by Podman
HOST_PORT=1111

# ----- Backend / Django settings -----
DJANGO_SETTINGS_MODULE=notsolong.settings.prod
DJANGO_SECRET_KEY=change-me
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:1111
DATABASE_URL=postgresql://notsolong:notsolong@db:5432/notsolong

# Demo data + admin helpers
DJANGO_SUPERUSER_EMAIL=admin@notsolong.io
DJANGO_SUPERUSER_PASSWORD=changeme
DJANGO_USER_EMAIL=demo@example.com
DJANGO_USER_PASSWORD=changeme
DJANGO_USER_USERNAME=Demo User

# Service-specific paths + secrets
TURNSTILE_SECRET_KEY=
FRONTEND_DIST_DIR=/app/frontend_dist

# ----- Frontend / Vite build settings -----
VITE_API_BASE_URL=/api
VITE_TURNSTILE_SITE_KEY=
